{
  "compilerOptions": {
	"target": "es5",
	"module": "commonjs",
	"allowJs": true,
	"jsx": "react",
	"baseUrl": "./",
	"paths": {
	  "@containers": ["./src/containers/index"],
	  "@containers/*": ["./src/containers/*"],

	  "@components": ["./src/components/index"],
	  "@components/*": ["./src/components/*"],

	  "@types": ["./src/types/index"],
	  "@types/*": ["./src/types/*"],

	  "@/*": ["src/*"]
	},
	"removeComments": true,
	"sourceMap": true,
	"outDir": "dist",
	"outFile": "index.js",
	"allowSyntheticDefaultImports": true,
	"strict": true,
	"esModuleInterop": true
  }
}
